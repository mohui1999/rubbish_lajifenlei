/* pages/search/search.wxss */
page{
  width: 750rpx;
  background-image: url(http://xiemenglei.cn/wp-content/uploads/2019/08/background_home.png);
  background-size: cover;
}

.search-container{
  position: fixed;
  height: 100%;
  width: 100%;
  z-index: 999;
}

.search-con{
  height: 65rpx;
  width: 600rpx;
  margin: 200rpx 75rpx 10rpx 75rpx;
  padding: 5rpx;
  background-color: white ;
  border-radius: 40rpx;
}

.search-border{
  display: flex;
  height: 55rpx;
  width: 588rpx;
  margin: 5rpx;
  background-color: white ;
  border-radius: 40rpx;
  border: 3rpx solid rgb(32, 235, 110);
}

.input_search{
  flex: 1;
  margin-left: 20rpx;
  margin-top: 8rpx;
}

.search-text{
  margin: 10rpx;
}

.img1{
  width: 500rpx;
  align-content: center;
  align-self: center;
  margin: 320rpx 125rpx 10rpx 125rpx;
}

.img2-con{
  position: fixed;
  z-index: 100;
  bottom: -90rpx;
}
.img2{
  width: 620rpx;
  align-content: center;
  align-self: center;
  margin-left: 75rpx;
  margin-right: 55rpx;
}

.hot{
  display: flex;
  margin-top: 15rpx;
}

.hot-item{
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 4rpx;
  border-radius: 10rpx;
}